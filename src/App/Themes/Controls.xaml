<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Cyber Button Style -->
    <Style x:Key="CyberButton" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource GlassPanel}"/>
        <Setter Property="Foreground" Value="{DynamicResource CyberCyan}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource CyberCyan}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontFamily" Value="{StaticResource MonoFont}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Padding" Value="15,8"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3" Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#33FFFFFF"/>
                            <Setter TargetName="border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#00FFFF" BlurRadius="10" ShadowDepth="0"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#44FFFFFF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Alert Button Style -->
    <Style x:Key="AlertButton" TargetType="Button" BasedOn="{StaticResource CyberButton}">
        <Setter Property="Foreground" Value="{DynamicResource AlertRed}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource AlertRed}"/>
    </Style>

    <!-- Fire Button with Safety Cover -->
    <Style x:Key="FireButton" TargetType="Button" BasedOn="{StaticResource CyberButton}">
        <Setter Property="Background" Value="#1A1111"/>
        <Setter Property="Foreground" Value="{DynamicResource TextMuted}"/>
        <Setter Property="BorderBrush" Value="#444"/>
        <Setter Property="Content" Value="â˜¢ FIRE MISSION"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsArmed}" Value="True">
                <Setter Property="Foreground" Value="{DynamicResource AlertRed}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource AlertRed}"/>
                <Setter Property="Background" Value="#33FF0000"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="Red" BlurRadius="15" ShadowDepth="0"/>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- Terminal TextBox Style -->
    <Style x:Key="TerminalInput" TargetType="TextBox">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource CyberGreen}"/>
        <Setter Property="CaretBrush" Value="{DynamicResource CyberGreen}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontFamily" Value="{StaticResource MonoFont}"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <!-- MenuItem Style -->
    <Style TargetType="MenuItem">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontFamily" Value="{StaticResource MonoFont}"/>
        <Setter Property="FontSize" Value="11"/>
    </Style>

</ResourceDictionary>
