<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Primary Colors -->
    <SolidColorBrush x:Key="BackgroundPrimary" Color="#0A0A0A"/>
    <SolidColorBrush x:Key="BackgroundSecondary" Color="#111111"/>
    <SolidColorBrush x:Key="BackgroundTertiary" Color="#0F0F0F"/>
    <SolidColorBrush x:Key="BackgroundPanel" Color="#080808"/>
    
    <!-- Accent Colors -->
    <SolidColorBrush x:Key="AccentCyan" Color="#00FFFF"/>
    <SolidColorBrush x:Key="AccentAmber" Color="#FFB000"/>
    <SolidColorBrush x:Key="AccentRed" Color="#FF4444"/>
    <SolidColorBrush x:Key="AccentGreen" Color="#00FF00"/>
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextPrimary" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#888888"/>
    <SolidColorBrush x:Key="TextMuted" Color="#666666"/>
    <SolidColorBrush x:Key="TextDark" Color="#444444"/>
    
    <!-- Status Colors -->
    <SolidColorBrush x:Key="StatusNominal" Color="#00FF00"/>
    <SolidColorBrush x:Key="StatusWarning" Color="#FFAA00"/>
    <SolidColorBrush x:Key="StatusCritical" Color="#FF4444"/>
    
    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderAccent" Color="#00FFFF"/>
    <SolidColorBrush x:Key="BorderSubtle" Color="#333333"/>
    <SolidColorBrush x:Key="BorderDanger" Color="#440000"/>

</ResourceDictionary>
