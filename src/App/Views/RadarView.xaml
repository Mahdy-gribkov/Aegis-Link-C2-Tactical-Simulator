<UserControl x:Class="AegisLink.App.Views.RadarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent" KeyDown="RadarView_KeyDown" Focusable="True">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#0A0A0A" BorderBrush="#00FFFF" BorderThickness="0,0,0,1">
            <Grid Margin="15,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="◀ BACK" Background="Transparent" Foreground="#00FFFF" BorderThickness="0"
                            FontFamily="Consolas" FontSize="12" Click="Back_Click" Cursor="Hand"/>
                    <TextBlock Text=" | FULL TACTICAL SCOPE" FontSize="14" Foreground="#888888" FontFamily="Consolas" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
                <TextBlock Text="[ESC] to return" FontSize="10" Foreground="#444444" FontFamily="Consolas" 
                           HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Full Radar Scope -->
        <Border Grid.Row="1" Background="#050505" Margin="20">
            <Canvas x:Name="FullRadarCanvas" Background="Transparent" ClipToBounds="True"/>
        </Border>

        <!-- Telemetry Overlay -->
        <Border Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="30,0,0,30" 
                Background="#AA000000" CornerRadius="5" Padding="15">
            <StackPanel>
                <TextBlock FontSize="14" Foreground="#00FFFF" FontFamily="Consolas" FontWeight="Bold" Text="TRACKING DATA"/>
                <TextBlock FontSize="12" Foreground="#888888" FontFamily="Consolas" Margin="0,10,0,0">
                    <Run Text="AZIMUTH: "/><Run Text="{Binding Azimuth, StringFormat=N2}" Foreground="#FFB000" FontWeight="Bold"/>
                    <Run Text="°"/>
                </TextBlock>
                <TextBlock FontSize="12" Foreground="#888888" FontFamily="Consolas">
                    <Run Text="DISTANCE: "/><Run Text="{Binding Distance, StringFormat=N1}" Foreground="#FFB000" FontWeight="Bold"/>
                    <Run Text=" km"/>
                </TextBlock>
                <TextBlock FontSize="12" Foreground="#888888" FontFamily="Consolas">
                    <Run Text="SIGNAL: "/><Run Text="{Binding SignalStrength, StringFormat=N1}" Foreground="#00FF00" FontWeight="Bold"/>
                    <Run Text=" dB"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Blip Indicator -->
        <Ellipse x:Name="RadarBlip" Grid.Row="1" Width="12" Height="12" Fill="#00FF00" Visibility="Collapsed">
            <Ellipse.Effect>
                <DropShadowEffect Color="#00FF00" BlurRadius="15" ShadowDepth="0"/>
            </Ellipse.Effect>
        </Ellipse>
    </Grid>
</UserControl>
