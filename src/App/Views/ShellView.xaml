<Window x:Class="AegisLink.App.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AEGIS-LINK C2" Height="800" Width="1400"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5" GlassFrameThickness="0"/>
    </WindowChrome.WindowChrome>

    <Border Background="{DynamicResource GlassBlack}" CornerRadius="10" BorderBrush="{DynamicResource CyberCyan}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Power Line -->
            <Border Grid.Row="0" Background="{DynamicResource CyberCyan}" CornerRadius="10,10,0,0"/>

            <!-- Row 0: Command Bar -->
            <Border Grid.Row="1" Background="#0A0A0A" MouseDown="TitleBar_MouseDown">
                <Grid Margin="15,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="â—¢ AEGIS-LINK C2" FontSize="16" FontWeight="Bold" 
                                   Foreground="{DynamicResource CyberCyan}" FontFamily="{StaticResource MonoFont}"/>
                        <TextBlock Text=" | v3.1.1" FontSize="12" Foreground="{DynamicResource TextMuted}" 
                                   Margin="10,0,0,0" VerticalAlignment="Center"/>
                        <TextBlock Text=" | " Foreground="#333333" Margin="10,0"/>
                        <TextBlock Text="{Binding MissionClock, Mode=OneWay}" FontSize="12" Foreground="{DynamicResource AlertAmber}" 
                                   FontFamily="{StaticResource MonoFont}" VerticalAlignment="Center"/>
                        
                        <!-- Connection Status -->
                        <Border Margin="20,0,0,0" CornerRadius="3" Padding="10,3" Background="#1A1A1A">
                            <StackPanel Orientation="Horizontal">
                                <!-- Blinking NO SIGNAL -->
                                <TextBlock Text="âš  NO SIGNAL - WAITING" FontSize="11" Foreground="{DynamicResource AlertRed}" 
                                           FontFamily="{StaticResource MonoFont}" FontWeight="Bold"
                                           Visibility="{Binding IsSignalLost, Converter={StaticResource BoolToVisibility}, Mode=OneWay}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSignalLost, Mode=OneWay}" Value="True">
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard RepeatBehavior="Forever">
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0.3" Duration="0:0:0.5" AutoReverse="True"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                
                                <!-- LINK ESTABLISHED -->
                                <TextBlock Text="â—‰ LINK ESTABLISHED" FontSize="11" Foreground="{DynamicResource CyberGreen}" 
                                           FontFamily="{StaticResource MonoFont}" FontWeight="Bold"
                                           Visibility="{Binding IsLinkEstablished, Converter={StaticResource BoolToVisibility}, Mode=OneWay}"/>
                            </StackPanel>
                        </Border>
                        
                        <TextBlock Text=" | UDP:5555" FontSize="10" Foreground="{DynamicResource TextMuted}" 
                                   FontFamily="{StaticResource MonoFont}" Margin="15,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Window Controls -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button Content="â”€" Width="30" Height="25" Background="Transparent" 
                                Foreground="{DynamicResource TextSecondary}" BorderThickness="0" 
                                Click="Minimize_Click" FontFamily="{StaticResource MonoFont}"/>
                        <Button Content="â–¡" Width="30" Height="25" Background="Transparent" 
                                Foreground="{DynamicResource TextSecondary}" BorderThickness="0" 
                                Click="Maximize_Click" FontFamily="{StaticResource MonoFont}"/>
                        <Button Content="âœ•" Width="30" Height="25" Background="Transparent" 
                                Foreground="{DynamicResource AlertRed}" BorderThickness="0" 
                                Click="Close_Click" FontFamily="{StaticResource MonoFont}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Row 1: Main Workspace (Combo-Deck) -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="280"/>
                </Grid.ColumnDefinitions>

                <!-- Column 0: RADAR (Tilted 3D) -->
                <Border Grid.Column="0" Background="#030303" Margin="10,10,5,10" CornerRadius="5">
                    <Grid>
                        <!-- Tilted Radar Canvas -->
                        <Viewport3D>
                            <Viewport3D.Camera>
                                <PerspectiveCamera Position="0,0,3" LookDirection="0,0,-1" FieldOfView="60"/>
                            </Viewport3D.Camera>
                        </Viewport3D>
                        
                        <Canvas x:Name="RadarCanvas" Background="Transparent" ClipToBounds="True" RenderTransformOrigin="0.5,0.5"
                                RenderOptions.BitmapScalingMode="LowQuality"
                                MouseWheel="RadarCanvas_MouseWheel" MouseMove="RadarCanvas_MouseMove"
                                MouseLeftButtonDown="RadarCanvas_MouseLeftButtonDown" MouseLeftButtonUp="RadarCanvas_MouseLeftButtonUp">
                            <Canvas.RenderTransform>
                                <TransformGroup>
                                    <MatrixTransform x:Name="RadarTransform"/>
                                    <ScaleTransform ScaleX="1" ScaleY="0.8"/>
                                    <SkewTransform AngleX="0" AngleY="-5"/>
                                </TransformGroup>
                            </Canvas.RenderTransform>
                        </Canvas>

                        <!-- Radar Glow Overlay -->
                        <Border Background="Transparent" IsHitTestVisible="False">
                            <Border.Effect>
                                <DropShadowEffect Color="#00FF00" BlurRadius="20" ShadowDepth="0" Opacity="0.2"/>
                            </Border.Effect>
                        </Border>

                        <!-- Toolbar Overlay -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15">
                            <Button Content="â—‰ SCAN" Command="{Binding InitiateScanCommand}" Style="{StaticResource CyberButton}" Margin="0,0,8,0"/>
                            <Button Content="â—¢ CAPTURE" Command="{Binding CapturePacketCommand}" Style="{StaticResource CyberButton}"/>
                        </StackPanel>

                        <!-- Debug Overlay -->
                        <Border VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="15"
                                Background="#88000000" CornerRadius="3" Padding="8">
                            <TextBlock FontSize="9" Foreground="{DynamicResource TextMuted}" FontFamily="{StaticResource MonoFont}">
                                <Run Text="FPS: "/><Run Text="{Binding Fps, Mode=OneWay}"/>
                                <Run Text=" | PPS: "/><Run Text="{Binding PacketsPerSecond, Mode=OneWay}"/>
                                <Run Text=" | BUILD: "/><Run Text="{Binding BuildVersion, Mode=OneWay}"/>
                            </TextBlock>
                        </Border>
                    </Grid>
                </Border>

                <!-- Column 1: Intel Panel (Frosted Glass) -->
                <Border Grid.Column="1" Background="#DD0A0A0A" Margin="5,10,10,10" CornerRadius="5" 
                        BorderBrush="#333333" BorderThickness="1">
                    <Border.Effect>
                        <BlurEffect Radius="0.5"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Status Panel -->
                        <StackPanel Grid.Row="0" Margin="15,15,15,10">
                            <TextBlock Text="â–¸ TELEMETRY" FontSize="12" Foreground="{DynamicResource CyberCyan}" 
                                       FontFamily="{StaticResource MonoFont}" Margin="0,0,0,10"/>
                            
                            <Grid Margin="0,0,0,5">
                                <TextBlock Text="STATE" FontSize="10" Foreground="{DynamicResource TextMuted}" FontFamily="{StaticResource MonoFont}"/>
                                <TextBlock Text="{Binding ConnectionStatus, Mode=OneWay}" HorizontalAlignment="Right" FontSize="12" 
                                           Foreground="{DynamicResource CyberGreen}" FontFamily="{StaticResource MonoFont}" FontWeight="Bold"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,5">
                                <TextBlock Text="SIGNAL" FontSize="10" Foreground="{DynamicResource TextMuted}" FontFamily="{StaticResource MonoFont}"/>
                                <TextBlock Text="{Binding SignalStrength, StringFormat={}{0:N1} dB, Mode=OneWay}" HorizontalAlignment="Right" 
                                           FontSize="12" Foreground="{DynamicResource CyberCyan}" FontFamily="{StaticResource MonoFont}"/>
                            </Grid>
                            
                            <Grid>
                                <TextBlock Text="BATTERY" FontSize="10" Foreground="{DynamicResource TextMuted}" FontFamily="{StaticResource MonoFont}"/>
                                <TextBlock Text="{Binding BatteryLevel, StringFormat={}{0}%, Mode=OneWay}" HorizontalAlignment="Right" 
                                           FontSize="12" Foreground="{DynamicResource CyberGreen}" FontFamily="{StaticResource MonoFont}"/>
                            </Grid>
                        </StackPanel>

                        <!-- Signal Graph -->
                        <Border Grid.Row="1" Background="#080808" Margin="15,0,15,10" CornerRadius="3">
                            <Grid>
                                <TextBlock Text="â–¸ WAVEFORM" FontSize="9" Foreground="{DynamicResource TextMuted}" 
                                           FontFamily="{StaticResource MonoFont}" Margin="5,3"/>
                                <Polyline Points="{Binding SignalPoints, Mode=OneWay}" Stroke="{DynamicResource CyberGreen}" 
                                          StrokeThickness="1.5" Margin="5,15,5,5">
                                    <Polyline.Effect>
                                        <DropShadowEffect Color="#00FF00" BlurRadius="5" ShadowDepth="0"/>
                                    </Polyline.Effect>
                                </Polyline>
                            </Grid>
                        </Border>

                        <!-- Packet Log -->
                        <Grid Grid.Row="2" Margin="15,0,15,15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="â–¸ PACKET LOG" FontSize="10" Foreground="{DynamicResource CyberCyan}" 
                                       FontFamily="{StaticResource MonoFont}" Margin="0,0,0,5"/>
                            <Border Grid.Row="1" Background="#050505" CornerRadius="3">
                                <ListBox ItemsSource="{Binding TerminalLog}" 
                                         Background="Transparent" BorderThickness="0" 
                                         Foreground="{DynamicResource CyberGreen}" 
                                         FontFamily="{StaticResource MonoFont}" FontSize="9" Padding="5"
                                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Padding" Value="0,1"/>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                </ListBox>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

            <!-- Row 2: Control Deck (Bottom) -->
            <Border Grid.Row="3" Background="#0A0A0A" Margin="10,0,10,10" CornerRadius="5">
                <Grid Margin="15,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Button Content="â—‰ INITIATE SCAN" Command="{Binding InitiateScanCommand}" 
                                Style="{StaticResource CyberButton}" Width="140" Margin="0,0,10,0"/>
                        <Button Style="{StaticResource FireButton}" Command="{Binding FireMissionCommand}"
                                Width="140" Margin="0,-5,10,-5" FontSize="12" FontWeight="Bold"/>
                        <Button Content="â—£ ARM SYSTEM" Command="{Binding ToggleArmamentCommand}" 
                                Style="{StaticResource CyberButton}" Width="120" Margin="0,0,10,0"/>
                        <Button Content="âŒ« CLEAR LOG" Command="{Binding ClearLogCommand}" 
                                Style="{StaticResource CyberButton}" Width="100" Margin="0,0,10,0"/>
                        <Button Content="ðŸ”Š AUDIO" Command="{Binding ToggleMuteCommand}" 
                                Style="{StaticResource CyberButton}" Width="80"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Quake-Style Terminal (Overlay) -->
            <Border Grid.Row="2" Grid.RowSpan="2" VerticalAlignment="Bottom" 
                    Background="#EE0A0A0A" Margin="10,0,10,70" CornerRadius="5"
                    Visibility="{Binding IsTerminalVisible, Converter={StaticResource BoolToVisibility}, Mode=OneWay}">
                <Grid Height="200">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="â—¢ COMMAND TERMINAL" FontSize="11" Foreground="{DynamicResource CyberCyan}" 
                               FontFamily="{StaticResource MonoFont}" Margin="15,10,0,5"/>

                    <ListBox Grid.Row="1" ItemsSource="{Binding TerminalLog}" 
                             Background="Transparent" BorderThickness="0" 
                             Foreground="{DynamicResource CyberGreen}" 
                             FontFamily="{StaticResource MonoFont}" FontSize="11" Margin="15,0"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0,1"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>

                    <Grid Grid.Row="2" Margin="15,0,15,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="AEGIS&gt; " Foreground="{DynamicResource CyberCyan}" 
                                   FontFamily="{StaticResource MonoFont}" VerticalAlignment="Center"/>
                        <TextBox x:Name="CommandInput" Grid.Column="1" Style="{StaticResource TerminalInput}"
                                 KeyDown="CommandInput_KeyDown"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Toast Notifications -->
            <ItemsControl Grid.Row="2" ItemsSource="{Binding ToastQueue}" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,80">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#DD000000" CornerRadius="5" Padding="20,10" Margin="0,5">
                            <TextBlock Text="{Binding}" FontSize="14" Foreground="{DynamicResource CyberCyan}" FontFamily="{StaticResource MonoFont}"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Border>
</Window>
