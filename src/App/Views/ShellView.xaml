<Window x:Class="AegisLink.App.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        Title="AEGIS-LINK C2" Height="800" Width="1400"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown">
    
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="0" ResizeBorderThickness="5" GlassFrameThickness="0"/>
    </shell:WindowChrome.WindowChrome>

    <Border Background="{DynamicResource GlassBlack}" CornerRadius="10" BorderBrush="{DynamicResource CyberCyan}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>

            <!-- Power Line -->
            <Border Grid.Row="0" Background="{DynamicResource CyberCyan}" CornerRadius="10,10,0,0"/>

            <!-- Custom Title Bar -->
            <Border Grid.Row="1" Background="#0A0A0A" MouseDown="TitleBar_MouseDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                        <TextBlock Text="◢ AEGIS-LINK C2" FontSize="16" FontWeight="Bold" 
                                   Foreground="{DynamicResource CyberCyan}" FontFamily="{StaticResource MonoFont}"/>
                        <TextBlock Text=" | v3.0.1" FontSize="12" Foreground="{DynamicResource TextMuted}" 
                                   Margin="10,0,0,0" VerticalAlignment="Center"/>
                        <TextBlock Text=" | " Foreground="#333333" Margin="10,0"/>
                        <TextBlock Text="{Binding MissionClock}" FontSize="12" Foreground="{DynamicResource AlertAmber}" 
                                   FontFamily="{StaticResource MonoFont}" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                        <Button Content="─" Width="30" Height="25" Background="Transparent" 
                                Foreground="{DynamicResource TextSecondary}" BorderThickness="0" 
                                Click="Minimize_Click" FontFamily="{StaticResource MonoFont}"/>
                        <Button Content="□" Width="30" Height="25" Background="Transparent" 
                                Foreground="{DynamicResource TextSecondary}" BorderThickness="0" 
                                Click="Maximize_Click" FontFamily="{StaticResource MonoFont}"/>
                        <Button Content="✕" Width="30" Height="25" Background="Transparent" 
                                Foreground="{DynamicResource AlertRed}" BorderThickness="0" 
                                Click="Close_Click" FontFamily="{StaticResource MonoFont}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content: Full-Screen Radar -->
            <Grid Grid.Row="2">
                <!-- Layer 0: Radar Background -->
                <Canvas x:Name="RadarCanvas" Background="#050505" ClipToBounds="True"/>

                <!-- Layer 1: Status HUD (Floating) -->
                <Border VerticalAlignment="Top" HorizontalAlignment="Right" Margin="20"
                        Background="#CC0A0A0A" CornerRadius="5" Padding="15" BorderBrush="#333333" BorderThickness="1">
                    <StackPanel Width="200">
                        <TextBlock Text="▸ STATUS" FontSize="12" Foreground="{DynamicResource CyberCyan}" 
                                   FontFamily="{StaticResource MonoFont}" Margin="0,0,0,10"/>
                        
                        <Grid Margin="0,0,0,5">
                            <TextBlock Text="STATE" FontSize="10" Foreground="{DynamicResource TextMuted}" FontFamily="{StaticResource MonoFont}"/>
                            <TextBlock Text="{Binding ConnectionStatus}" HorizontalAlignment="Right" FontSize="12" 
                                       Foreground="{DynamicResource CyberGreen}" FontFamily="{StaticResource MonoFont}" FontWeight="Bold"/>
                        </Grid>
                        
                        <Grid Margin="0,0,0,5">
                            <TextBlock Text="SIGNAL" FontSize="10" Foreground="{DynamicResource TextMuted}" FontFamily="{StaticResource MonoFont}"/>
                            <TextBlock Text="{Binding SignalStrength, StringFormat={}{0:N1} dB}" HorizontalAlignment="Right" 
                                       FontSize="12" Foreground="{DynamicResource CyberCyan}" FontFamily="{StaticResource MonoFont}"/>
                        </Grid>
                        
                        <Grid Margin="0,0,0,5">
                            <TextBlock Text="BATTERY" FontSize="10" Foreground="{DynamicResource TextMuted}" FontFamily="{StaticResource MonoFont}"/>
                            <TextBlock Text="{Binding BatteryLevel, StringFormat={}{0}%}" HorizontalAlignment="Right" 
                                       FontSize="12" Foreground="{DynamicResource CyberGreen}" FontFamily="{StaticResource MonoFont}"/>
                        </Grid>

                        <Separator Background="#333333" Margin="0,10"/>

                        <TextBlock Text="▸ LINK QUALITY" FontSize="10" Foreground="{DynamicResource CyberCyan}" 
                                   FontFamily="{StaticResource MonoFont}" Margin="0,0,0,5"/>
                        <Border Background="#080808" Height="50" CornerRadius="3">
                            <Polyline Points="{Binding SignalPoints}" Stroke="{DynamicResource CyberGreen}" StrokeThickness="1" Margin="3"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Layer 1: Toolbar (Top-Left) -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20">
                    <Button Content="◉ SCAN" Command="{Binding InitiateScanCommand}" Style="{StaticResource CyberButton}" Margin="0,0,10,0"/>
                    <Button Content="◢ CAPTURE" Command="{Binding CapturePacketCommand}" Style="{StaticResource CyberButton}"/>
                </StackPanel>

                <!-- Debug Overlay (Bottom-Left) -->
                <Border VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20"
                        Background="#88000000" CornerRadius="3" Padding="8" Opacity="0.7">
                    <TextBlock FontSize="9" Foreground="{DynamicResource TextMuted}" FontFamily="{StaticResource MonoFont}">
                        <Run Text="FPS: "/><Run Text="{Binding Fps, Mode=OneWay}"/>
                        <Run Text=" | PPS: "/><Run Text="{Binding PacketsPerSecond, Mode=OneWay}"/>
                        <Run Text=" | BUILD: "/><Run Text="{Binding BuildVersion, Mode=OneWay}"/>
                    </TextBlock>
                </Border>
            </Grid>

            <!-- Quake-Style Terminal (Docked Bottom) -->
            <Border Grid.Row="3" Background="#0A0A0A" BorderBrush="#333333" BorderThickness="0,1,0,0"
                    Visibility="{Binding IsTerminalVisible, Converter={StaticResource BoolToVisibility}}">
                <Grid Height="180">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>

                    <ListBox Grid.Row="0" ItemsSource="{Binding TerminalLog}" 
                             Background="Transparent" BorderThickness="0" 
                             Foreground="{DynamicResource CyberGreen}" 
                             FontFamily="{StaticResource MonoFont}" FontSize="11" Margin="10,5"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0,1"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>

                    <Grid Grid.Row="1" Margin="10,0,10,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="AEGIS&gt; " Foreground="{DynamicResource CyberCyan}" 
                                   FontFamily="{StaticResource MonoFont}" VerticalAlignment="Center"/>
                        <TextBox x:Name="CommandInput" Grid.Column="1" Style="{StaticResource TerminalInput}"
                                 KeyDown="CommandInput_KeyDown"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Status Bar -->
            <Border Grid.Row="4" Background="#080808" CornerRadius="0,0,10,10">
                <Grid Margin="15,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Ellipse x:Name="RxIndicator" Width="6" Height="6" Fill="#333333" Margin="0,0,5,0"/>
                        <TextBlock Text="RX" FontSize="9" Foreground="{DynamicResource TextMuted}" FontFamily="{StaticResource MonoFont}" Margin="0,0,15,0"/>
                        <Ellipse x:Name="TxIndicator" Width="6" Height="6" Fill="#333333" Margin="0,0,5,0"/>
                        <TextBlock Text="TX" FontSize="9" Foreground="{DynamicResource TextMuted}" FontFamily="{StaticResource MonoFont}"/>
                    </StackPanel>
                    <TextBlock Text="AEGIS-LINK C2 v3.0.1 | .NET 6.0 LTS" FontSize="9" Foreground="{DynamicResource TextMuted}" 
                               VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="{StaticResource MonoFont}"/>
                    <TextBlock Text="[~] Terminal | [F11] Fullscreen" FontSize="9" Foreground="{DynamicResource TextMuted}" 
                               HorizontalAlignment="Right" VerticalAlignment="Center" FontFamily="{StaticResource MonoFont}"/>
                </Grid>
            </Border>

            <!-- Toast Notifications -->
            <ItemsControl Grid.Row="2" ItemsSource="{Binding ToastQueue}" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,50">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#DD000000" CornerRadius="5" Padding="20,10" Margin="0,5">
                            <TextBlock Text="{Binding}" FontSize="14" Foreground="{DynamicResource CyberCyan}" FontFamily="{StaticResource MonoFont}"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Border>
</Window>
